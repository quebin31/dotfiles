#!/bin/bash

readonly SERVER_HOME="$HOME/Extra/MediaServer"

function show_help_and_exit {
  echo "Usage: $0 [start|stop|restart]"
  exit 1
}

if [[ $# -ne 1 ]]; then
  show_help_and_exit
fi

case "$1" in
  start|stop|restart)
    cd "$SERVER_HOME" && just "$1"
    ;;
  *)
    show_help_and_exit
    ;;
esac

